{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://yamplay.cc/schemas/behavior.schema.json",
  "title": "AMS Behavior Definition",
  "description": "Schema for reusable behavior files - collections of interactions that can be attached to entities",
  "type": "object",
  "required": ["name", "interactions"],
  "additionalProperties": false,

  "properties": {
    "name": {
      "type": "string",
      "description": "Behavior name (used to reference this behavior)"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of what this behavior does"
    },
    "config": {
      "type": "object",
      "description": "Configurable parameters for this behavior",
      "additionalProperties": {
        "$ref": "#/$defs/config_param"
      }
    },
    "interactions": {
      "$ref": "interactions.schema.json#/$defs/interactions_block",
      "description": "Interaction definitions grouped by trigger source"
    }
  },

  "$defs": {
    "config_param": {
      "type": "object",
      "description": "A configurable parameter",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["number", "int", "float", "string", "boolean", "color", "point"],
          "description": "Parameter type"
        },
        "default": {
          "description": "Default value if not specified"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description"
        },
        "min": {
          "type": "number",
          "description": "Minimum value (for numeric types)"
        },
        "max": {
          "type": "number",
          "description": "Maximum value (for numeric types)"
        },
        "enum": {
          "type": "array",
          "description": "Allowed values (for string type)"
        }
      }
    }
  }
}
